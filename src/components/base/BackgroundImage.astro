---
import { siteConfig } from "@/config";

const backgroundImage = siteConfig.background.src;
---

<div class="background-image">
  <img src={backgroundImage} alt="background" />
</div>

<style lang="scss">
.background-image {
  height: 280px;
  img {
    height: 100%;
    object-fit: cover;
  }
}
</style>