---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
  title: string;
  src: ImageMetadata;
  alt: string;
};

const { title, src, alt } = Astro.props;
---

<figure class="figure">
  <Image src={src} alt={alt} />
  { title && (
    <figcaption class="figcaption">
      <Fragment set:html={title} />
    </figcaption>
  )}
</figure>

<style lang="scss">
  .figcaption {
    margin-top: 0.5rem;
    text-align: center;
    font-size: 0.875rem;
  }
</style>